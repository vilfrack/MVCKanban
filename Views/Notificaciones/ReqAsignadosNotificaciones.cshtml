@model IEnumerable<MVCKanban.ViewModel.ViewAsignarNotificacion>

<a href="#" class="dropdown-toggle" data-toggle="dropdown">
    <i class="fa fa-flag-o"></i>
    @if (ViewBag.Cantidad > 0)
    {
        <span class="label label-warning">@ViewBag.Cantidad</span>
    }
</a>
@{
    if (Model != null)
    {
        <ul class="dropdown-menu">
            <li class="header">You have @ViewBag.Cantidad messages</li>
            <li>
                <!-- inner menu: contains the actual data -->
                <ul class="menu">
                    @foreach (var item in Model)
                    {

                        <li>
                            <!-- start message -->
                            <a href="@Url.Action("index", "Asignar")">
                                <div class="pull-left">
                                    <img src="@Url.Content(item.Foto)" class="img-circle" alt="User Image">
                                </div>
                                <h4>
                                    @item.NombreUsuario
                                </h4>
                                <p>@item.Comentario</p>
                            </a>
                        </li>
                        <li></li>
                    }
                    <!-- end message -->
                </ul>
            </li>
            <li class="footer">&nbsp;</li>
        </ul>
    }
}
